<forrest:contract name="nav-main-sub"
xmlns:forrest="http://apache.org/forrest/templates/1.0">
  <description>nav-main-sub will output the secondary navigation AKA
  level2.</description>
  <usage>
    <![CDATA[<forrest:contract name="nav-main-sub" dataURI="cocoon://#{$cocoon/parameters/getRequest}.navigation.xml"/>]]>
</usage>
  <forrest:template xmlns:forrest="http://apache.org/forrest/templates/1.0"
  name="nav-main-sub" inputFormat="xsl">
    <xsl:stylesheet version="1.1"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
      <xsl:template match="/">
        <forrest:content>
          <forrest:part>
            <xsl:comment>+ |start nav-main-sub +</xsl:comment>
            <!-- FIXME - Suppress the following test when empty div problem is solved -->
            <!-- FIXME - With a little css work, we should use the common contract and suppress this one (no need of level2tabs) -->
            <xsl:if test="navigation/tab/div[@id='nav-main-sub']/*">
              <div id="level2tabs">
                <xsl:copy-of select="navigation/tab/div[@id='nav-main-sub']/*" />
              </div>
            </xsl:if>
            <xsl:comment>+ |end Endtabs +</xsl:comment>
          </forrest:part>
        </forrest:content>
      </xsl:template>
    </xsl:stylesheet>
  </forrest:template>
</forrest:contract>
